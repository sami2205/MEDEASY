<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/healthcare_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Healthcare Products"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Product Categories Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/category_medicines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="Medicines" />

            <Button
                android:id="@+id/category_supplements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supplements"
                android:backgroundTint="@color/colorPrimary" />

            <Button
                android:id="@+id/category_health_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Food"
                android:backgroundTint="@color/colorPrimary" />

        </LinearLayout>

        <!-- Product List Section -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="505dp"
            android:layout_weight="1"
            android:padding="16dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRODUCT DETAILS" />

        <!-- Filter and Sort Section -->

    </LinearLayout>
</RelativeLayout>